<?xml version="1.0" encoding="UTF-8"?>
<publisher-settings>  
	<db-url>jdbc:mysql://10.88.6.23/rabbitmq-mbsuite?user=root&amp;password=root123</db-url>      
	<publisher-groups>
	    <group name="vanillatest">
	        <run-for-secs>30</run-for-secs>	
	        <total-publishers>1</total-publishers>
			<load-dist-strategy>balanced</load-dist-strategy>
	        <think-time-in-ms>5</think-time-in-ms>
	        <warm-up-time-in-ms>5000</warm-up-time-in-ms>
	        <message-size>120</message-size>
	        <dump-details>true</dump-details>
	        <topics>test</topics>	 <!--  separate multiple topic with commas -->
	        <attributes>
	            <attribute>
	                <key>host-ip</key>
	                <value>localhost</value>
	            </attribute>
	            <attribute>
	                <key>host-port</key>
	                <value>2181</value>
	            </attribute> 
	            <attribute>
	                <key>batch-size</key>
	                <value>1</value>
	            </attribute>                  	            	            	            
	        </attributes>
	    </group>
	    
	    <group name="5publishers">
	        <total-publishers>5</total-publishers>
	        <total-messages>10000</total-messages>
	        <enable-max-throughput>true</enable-max-throughput>
	        <think-time>2</think-time>
	        <message-size>60</message-size>	        
	        <attributes>
	            <attribute>
	                <key>host-ip</key>
	                <value>localhost</value>
	            </attribute>
	            <attribute>
	                <key>host-port</key>
	                <value>2181</value>
	            </attribute> 
	            <attribute>
	                <key>batch-size</key>
	                <value>1</value>
	            </attribute>      
	            <attribute>
	                <key>topic</key>
	                <value>test</value>
	            </attribute>     	            	            	            	            
	        </attributes>
	    </group>	    
	</publisher-groups>
	<tasks>
	    <task>
	        <key>sample</key>
	        <clazz>com.persistent.bcsuite.tasks.SampleTask</clazz>
	    </task>
	    <task>
	        <key>kafka</key>
	        <clazz>com.persistent.bcsuite.addons.KafkaPublisher</clazz>
	    </task>
	</tasks>
</publisher-settings>
